					</div>
					</div><!-- tab-pane -->
					<div class="tab-pane" id="recent2">
					<h4>Historique des allocations</h4>
						<table class="datatable table display responsive nowrap">
							<thead>
						
							<tr>	        
								<th class="wd-5p">#</th>
								<th class="wd-15p">Client</th>
								<th class="wd-25p">Type de Chambre</th>
								<th class="wd-25p">Date de fin</th>
								<th class="wd-25p">ACTION</th>
							</tr>
							
							</thead>
							<tbody>
							{% for allocation in allocations %}
							<tr>
								<td>{{loop.index}}</td>
								<td>{{allocation.occupant.username}}</td>
								<td>{{allocation.chambre.type.nom}}</td>
								<td>{{allocation.datefin|date('d/m/Y H:i:s')}}</td>
								<td>
									{# <button class="btn btn-teal active" ><a  style="padding: 0px !important; color:white;" class="nav-link ajax-link"  data-toggle="ajax" data-target="monContent" ><i class="fa fa-eye" aria-hidden="true"></i></a></button>
									<button class="btn btn-teal active" ><a  style="padding: 0px !important; color:white;" class="nav-link ajax-link"  data-toggle="ajax" data-target="monContent" ><i class="fa fa-edit" aria-hidden="true"></i></a></button>
									<button class="btn btn-pink active"><a  style="padding: 0px !important; color:white;" class="nav-link ajax-link"  data-toggle="ajax" data-target="monContent" ><i class="fa fa-trash" aria-hidden="true" ></i></a></button> #}
									<button class="btn btn-success  active"><a href="/printrecuallocation?id={{allocation.id}}"  style="padding: 0px !important; color:white;" class="nav-link" target="_blank" ><i class="fas fa-print" aria-hidden="true" ></i></a></button> 		
								</td>
							</tr>
							{% endfor %}
							</tbody>
						</table>
					</div><!-- tab-pane -->

					<div class="tab-pane" id="toprated2">
						<h4>Historique des Reservations</h4>
						<table class="datatable table display responsive nowrap">
							<thead>
						
							<tr>	        
								<th class="wd-5p">#</th>
								<th class="wd-15p">Client </th>
								<th class="wd-20p">Date de debut</th>
								<th class="wd-15p">Date de fin</th>
								<th class="wd-10p">Montant</th>
							</tr>
							
							</thead>
							<tbody>
							{% for reservation in reservations %}
						
								<tr>
									<td>{{ loop.index}}</td>
									<td>{{ reservation.client.nom}}</td>
									<td>{{ reservation.datedariver |date('d/m/Y') }} à {{ reservation.heuredariver | date('H:i:s')}}</td>
									<td>{{ reservation.datedepart |date('d/m/Y')}} à {{ reservation.heuredepart | date('H:i:s')}}</td>
									<td>{{ reservation.montan | craue_currency('XAF', 'fr-FR') }}</td>
								</tr>
							{% else %}
								<p>Cette chambre n'a jamais été reservée</p>
							{% endfor %}
							</tbody>
						</table>
					</div><!-- tab-pane -->

				</div><!-- tab-content -->
				</div><!-- card-body -->
			</div><!-- card -->
		</div><!-- col -->
	</div>
