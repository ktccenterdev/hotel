<div class="br-pagetitle">
  <i class="icon fa fa-truck"></i>
  <div>
    <h4>FOURNISSEURS</h4>
    <p style="color:blue;" class="mg-b-0">----</p>
  </div>
</div><!-- d-flex -->
<div class="br-section-wrapper">
  <h6 class="br-section-label">Liste des fournisseurs</h6>          	 
  <div x-data="{ ajouter : false }">
    <div class="d-flex justify-content-end" style="padding:10px;">
      <button onclick="showNouveau()" id="btn-nouveau" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Ajouter</button>
      <a href="{{path('print-fournisseur')}}" class="btn btn-secondary mg-l-10 {{app.user.hasAccess('print-fournisseur')}}" target="_blank"><i class="fa fa-print"></i> Imprimer</a>
    </div>
    <div class="formelement" id="nouveau" x-show="ajouter" style="padding:10px; display:none;">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-12 col-xlg-12 col-md-12">
          <div class="row mg-t-80">
            <div class="col">
              <form  action="{{path('fournisseur-add')}}" class="{{app.user.hasAccess('fournisseur-add')}}" method="POST" data-toggle="ajax" data-target="monContent">
                <div class="form-layout form-layout-4">
                  <h6 class="br-section-label">Ajouter un fournisseur</h6>
                  <div class="row">
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Nom: <span class="tx-danger">*</span></label>
                      <div class="col-sm-12 mg-t-10 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Nom du fournisseur" name="nom" required>
                      </div>
                    </div>
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Ville: </label>
                      <div class="col-sm-12 mg-t-10 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Ville du fournisseur" name="ville">
                      </div>
                    </div>
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Localisation: </label>
                      <div class="col-sm-12 mg-t-10 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Localisation" name="localisation">
                      </div>
                    </div>
                  </div><!-- row -->
                  <br>
                  <div class="row">
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Téléphone 1: </label>
                      <div class="col-sm-12 mg-t-12 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Téléphone 1" name="tel1">
                      </div>
                    </div>
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Téléphone 2: </label>
                      <div class="col-sm-12 mg-t-12 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Téléphone 2" name="tel2">
                      </div>
                    </div>
                    <div class="col-lg-4 col-xlg-4 col-md-12">
                      <label class="col-sm-12 form-control-label">Email: </label>
                      <div class="col-sm-12 mg-t-10 mg-sm-t-0">
                        <input type="text" class="form-control" placeholder="Email" name="email">
                      </div>
                    </div>
                  </div><!-- row -->

                  <div class="row row-xs mg-t-30">
                    <div class="col-sm-8 mg-l-auto">
                      <div class="form-layout-footer">
                        <button type="button" class="btn btn-default" onclick="showNouveau()">Annuler</button>
                        <button type="submit" id="btn-save-nouveau" class="btn btn-primary mg-r-5">Enrégistrer</button>
                      </div>
                    </div>
                  </div>
                </div><!-- form-layout -->
              </form>
            </div><!-- col-6 -->
          </div><!-- row -->
        </div>
      </div>
    </div>
  <div> 
  
  <div class="row table-wrapper responsiveelement col-lg-12">
    <div class="col-lg-12 col-md-12">
      <table class="datatable table display responsive nowrap">
        <thead>
          <tr>	        
            <th class="wd-5p">ID</th>
            <th class="wd-15p">Nom</th>
            <th class="wd-15p">ville</th>
            <th class="wd-25p">Tél</th>
            <th class="wd-25p">Tél 2</th>
            <th class="wd-25p">email</th>
            <th class="wd-25p text-center">ACTION</th>
          </tr>
        </thead>
        <tbody>
        {% for four in fournisseurs %}
          <tr>
            <td>{{loop.index}}</td>
            <td>{{four.nom}}</td>
            <td>{{four.ville}}</td>
            <td>{{four.tel1}}</td>
            <td>{{four.tel2}}</td>
            <td>{{four.email}}</td>
            <td class="dropdown text-center">
								<a href="#" data-toggle="dropdown" class="btn pd-y-3 tx-gray-500 hover-info"><i class="icon ion-more"></i></a>
								<div class="dropdown-menu dropdown-menu-right pd-10">
									<nav class="nav nav-style-1 flex-column text-center">	
										<a href="{{path('showfour', {id: four.id})}}"  class="ajax-link btn btn-link {{app.user.hasAccess('showfour')}}"  data-toggle="ajax" data-target="monContent" >Détails</a>
                    <a href="{{path('editfour', {id: four.id})}}"  class="ajax-link btn btn-link {{app.user.hasAccess('editfour')}}"  data-toggle="ajax" data-target="monContent" >Editer</a>
                    <form  class="js-form-send confirm-delete {{app.user.hasAccess('delete-fournisseur')}}" action="{{path('delete-fournisseur')}}" method="DELETE"
                      data-toggle="ajax" data-target="monContent" data-message="Voulez-vous supprimer ce fournisseur?">
                      <input type="hidden" name="id" value="{{four.id}}">
                      <button class="btn btn-link" type="submit">Supprimer</button>	
                    </form>
									</nav>
								</div><!-- dropdown-menu -->
							</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div><!-- table-wrapper -->
</div><!-- br-section-wrapper -->




    
