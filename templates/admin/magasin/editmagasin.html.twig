<div class="row row-sm mg-t-25 mg-l-5 mg-t-5">
<!-- col-3 -->
<div class="col-12">
    <div class="card bd-primary">
        <div class="card-header bg-primary tx-white">
        
            <a href="{{path('index-magasin')}}" class=" text-white float-left" data-toggle="ajax" data-target="monContent">
                <i class="fa fa-arrow-left"></i> 
            </a>
        Edition du Magasin {{magasin.nom}}
        </div>
        <!-- card-header -->
        <form id="form-send" class="js-form-sendavecfile sauvegardededonne" 
            action="{{path('edition-magasin')}}" method="POST" data-toggle="ajax" data-target="monContent"> 

            <div class="card-body">
                <div class="row row-xs">
                    <div class="col-lg-4">
                        <label for="">Nom:
                        </label>
                        <input type="hidden" id="id" class="form-control modif" name="id" value="{{magasin.id}}" >
                        <input type="text" id="nom" class="form-control modif" name="nom" value="{{magasin.nom}}" >
                    </div>
                    <div class="col-lg-4">
                        <label for="">Type:
                        </label>
                        <select class="form-control" name="type">
                            <option disabled selected label="{{magasin.type}}">{{magasin.type}}</option>
                            {% set types = ["Général", "Interne"] %}
                            {% for type in types %}
                                <option value="{{type}}">{{type}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <label for="">antenne:
                        </label>
                        <input type="text" id="telephone1" class="form-control modif" name="telephone1" value="{{magasin.antene.nom}}" disabled>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-xlg-12 col-md-12">
                        <label class="col-sm-12 form-control-label">Description: </label>
                        <div class="col-sm-12 mg-t-10 mg-sm-t-0">
                            <textarea rows="3" class="form-control mg-t-20" name="description">{{magasin.description}}</textarea>
                        </div>
                    </div>
                </div><!-- row -->
                <div class="form-layout-footer mg-t-30">
                    <button type="submit" id="btn-save-nouveau" class="btn btn-primary mg-r-5">Valider</button>
                    <a href="{{path('index-magasin')}}" data-toggle="ajax" data-target="monContent"><button class="btn btn-default mg-r-5">Liste</button></a>
                    {# <button type="button" class="btn btn-secondary" onclick="hide()">Annuler</button> #}
                </div>
                
            </div>
        </form>
    </div>

</div> 
