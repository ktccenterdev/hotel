
<div class="br-pagetitle">
  <i class="icon ionicons ion-ios-list-outline"></i>
  <div>
    <h4>Modules</h4>
    <p style="color:blue;" class="mg-b-0">----</p>
  </div>
</div><!-- d-flex -->

  <div class="br-section-wrapper">
    <div class="container">

    <div class="row">
      <div class="col-sm"><h6 class="br-section-label">Liste des Modules </h6>
        <div    x-data="{ ajouter : false }">
          <div class="d-flex justify-content-end" style="padding:10px;">
            <button onclick="showNouveau()"  class="btn btn-primary" id="btn-nouveau"><i class="fas fa-plus"></i> Ajouter</button>
          </div>
          <div class="formelement" x-show="ajouter" style="padding:10px; display: none;" id="nouveau">
            <div class="row d-flex justify-content-center">
              <div class="col-lg-7 col-xlg-8 col-md-12">
                <div class="row mg-t-80">
                  <div class="col">
                    <form id="form-send" class="js-form-send" action="{{path('module-add')}}" method="POST"
                    data-target = "ajax" data-toggle="monContent">
                      <div class="form-layout form-layout-4">
                        <h6 class="br-section-label">Ajouter un module</h6>
                        <div class="row">
                          <label class="col-sm-4 form-control-label">Nom: <span class="tx-danger">*</span></label>
                          <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                            <input type="text" class="form-control" placeholder="Nom du module" name="nom">
                          </div>
                        </div><!-- row -->
                        <br>
                        <div class="row">
                          <label class="col-sm-4 form-control-label">Description: <span class="tx-danger">*</span></label>
                          <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                            <input type="text" class="form-control" placeholder="Nom du module" name="description">
                          </div>
                        </div><!-- row -->

                        <div class="form-layout-footer mg-t-30">
                          <button type="submit" class="btn btn-info">Valider</button>
                          <button class="btn btn-secondary" onclick="showNouveau()">Annuler</button>
                        </div><!-- form-layout-footer -->
                      </div><!-- form-layout -->
                    </form>
                  </div><!-- col-6 -->
                </div><!-- row -->
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
    </div>
  </div>
          
  <div class="table-wrapper responsiveelement col-lg-12">
    <table class="datatable table display  nowrap">
      <thead>
        <tr>
          <th class="wd-15p">#</th>
          <th class="wd-15p">Nom</th>
          <th class="wd-20p">Description</th>
        </tr>
      </thead>
      <tbody>
        {% for module in modules %}
          <tr>
            <td>{{loop.index}}</td>
            <td>{{module.nom}}</td>
            <td>{{module.description}}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div><!-- table-wrapper -->
    

		


