{% extends 'admin/print/baseprint.pdf.twig' %}

{% block reportbody %}
<h2 class="titre">LISTE DES ANTENNES</h2>
<table style="width: 100%;" class="table"  border="1" cellspacing="1" cellpadding="4">
    <tr class="table-header">
        <th width="5%">#</th>
        <th width="20%">Nom</th>
        <th width="20%">Localisation</th>
        <th width="30%">Téléphone</th>
        <th width="25%">Email</th>
    </tr>
    <tbody>
        {% for item in antenes %}
         <tr style="background-color: {{loop.index % 2 == 0 ? '' : '#f0f4f5'}}">
            <td align="center">{{ loop.index }}</td>
            <td>{{ item.nom }}</td>
            <td>{{ item.localisation }}</td>
            <td>{{ item.tel }}</td>
            <td>{{ item.email }} XAF</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}