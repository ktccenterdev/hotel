{% extends 'admin/print/baseprint.pdf.twig' %}

{% block reportbody %}
<h2 class="titre">LISTE DES TARIFS</h2>
<table style="width: 100%;" class="table"  border="1" cellspacing="1" cellpadding="4">
    <tr class="table-header">
        <th width="5%">#</th>
        <th width="20%">Nom</th>
        <th width="20%">Dur√©e(en heure)</th>
        <th width="20%">Type de chambre</th>
        <th width="20%">Prix</th>
    </tr>
    <tbody>
        {% for item in tarifs %}
         <tr style="background-color: {{loop.index % 2 == 0 ? '' : '#f0f4f5'}}">
            <td align="center">{{ loop.index }}</td>
            <td>{{ item.nom}}</td>
            <td>{{ item.duree}}</td>
            <td>{{item.typechambre.nom}}</td>
            <td>{{item.prix}} XAF</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}