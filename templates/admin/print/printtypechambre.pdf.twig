{% extends 'admin/print/baseprint.pdf.twig' %}

{% block reportbody %}
<h2 class="titre">LISTE DES TYPES DE CHAMBRES</h2>
<table style="width: 100%;" class="table"  border="1" cellspacing="1" cellpadding="4">
    <tr class="table-header">
        <th width="5%">#</th>
        <th width="20%">Nom</th>
        <th width="20%">Image</th>
        <th width="45%">Description</th>
    </tr>
    <tbody>
        {% for item in types %}
         <tr style="background-color: {{loop.index % 2 == 0 ? '' : '#f0f4f5'}}">
            <td align="center">{{ loop.index }}</td>
            <td>{{ item.nom}}</td>
            <td>
                <img src="{{'photo/chambre/' ~ item.photo}}" alt="" width="100" height="100"><br>                           
            </td>
            <td>{{ item.description }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}