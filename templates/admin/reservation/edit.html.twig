<div class="br-mainpanel">
    <div class="br-pagetitle">
        <i class="icon ionicons ion-edit"></i>
    <div>
		<h4>Modifier</h4>
		<p style="color:blue;" class="mg-b-0">----</p>
    </div>
</div><!-- d-flex -->
    <div class="br-pagebody">
        <div class="br-section-wrapper">
          	<div class="container">
				<div class="row">
					<div class="col-sm"><h6 class="br-section-label">Modifier les Reservations</h6>
						<div x-data="{ ajouter : false }">
													
								<div class="row d-flex justify-content-center">
									<div class="col-lg-9 col-xlg-9 col-md-12">
										<div class="row mg-t-80">
											<div class="col">
												<form id="form-send" class="js-form-send {{app.user.hasAccess('edit-Rreservation')}}" action="{{path('edit-Rreservation')}}" method="POST" data-toggle="ajax" data-target="monContent">
													<div class="form-layout form-layout-4">
														<h6 class="br-section-label">Modifier une Reservation</h6>
														<div class="row">
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Nom du Client: <span class="tx-danger">*</span></label>
																	<div class="mg-t-10 mg-sm-t-0">
                                                                    <input class="form-control" type="hidden" name="id" id="id" value="{{reservations.id}}" >
																		<select name="client" class="form-control select2"  required>
																			<option value="{{reservations.client.id}}">{{reservations.client.prenom}} {{reservations.client.nom}}</option>
																		</select>
																	</div>
																</div>
															</div>
															<div class="col-sm-6">
																<div class="form-group">
																	<label class=" form-control-label">Votre Type de Chambre Actuelle: ({{reservations.typechambre.nom}})<span class="tx-danger">*</span></label>
																	<div class="mg-t-10 mg-sm-t-0">
																		<select name="typech" class="form-control select2" required>
																			{# <option value="{{reservations.typechambre.id}}" disabled selected>{{reservations.typechambre.nom}}</option> #}
																			<option value="" disabled selected>choisir un type de chambre</option>
																			{% for type in types %}
																			<option value="{{type.id}}">{{type.nom}} </option>
																			{% endfor %}
																		</select>
																	</div>
																</div>
															</div>
														</div><!-- row -->
														<div class="row" style="padding-top:5px;">
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Début du séjour: ({{reservations.datedariver | date('d/m/Y')}}) <span class="tx-danger">*</span></label>
																	<div class="mg-t-10 mg-sm-t-0">
																		<input type="date" class="form-control" placeholder="Date" name="dateat" value="{{ reservations.datedariver | date('d/m/Y')}}">
																	</div>
																</div>
															</div>
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Heure d'arriver: <span class="tx-danger">*</span></label>
																	<div class="col-sm-8 mg-t-10 mg-sm-t-0">
																		<input type="time" class="form-control" name="heurea" value="{{ reservations.heuredariver | date('H:i:s')}}">
																	</div>
																</div>
															</div>
														</div><!-- row -->
														<div class="row" style="padding-top:5px;">
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Fin du séjour: ({{ reservations.datedepart | date('d/m/Y') }}) <span class="tx-danger">*</span></label>
																	<div class="mg-t-10 mg-sm-t-0">
																		<input type="date" class="form-control" placeholder="Date" name="dateto" value="{{ reservations.datedepart | date('d/m/Y') }}">
																	</div>
																</div>
															</div>
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Heure de fin: <span class="tx-danger">*</span></label>
																	<div class="col-sm-8 mg-t-10 mg-sm-t-0">
																		<input type="time" class="form-control" name="heuref"  value="{{ reservations.heuredepart | date('H:i:s')}}">
																	</div>
																</div>
															</div>
														</div><!-- row -->
														<div class="row">
															<div class="col-sm-6">
																<div class="form-group">
																	<label class="form-control-label">Montant: <span class="tx-danger">*</span></label>
																	<div class="mg-t-10 mg-sm-t-0">
																		<input type="number" class="form-control" placeholder="Montant" name="montant">
																	</div>
																</div>
															</div><!-- col -->
														</div>
														<div class="form-layout-footer mg-t-30">
                                                           <button type="submit" class="btn btn-primary">Modifier</button>	
														</div><!-- form-layout-footer -->
													</div><!-- form-layout -->
												</form>
											</div><!-- col-6 -->
										</div><!-- row -->
									</div>
								</div>
							
						</div>
					</div>
				</div>
			</div>
		
        </div><!-- br-section-wrapper -->
    </div><!-- br-pagebody -->
</div><!-- br-mainpanel -->



  
<script>
      $(".formelement").hide();
    
    </script>
    <script>
      function show() {
        $(".formelement").show();
      }
      function hide() {
        $(".formelement").hide();
      }
    </script>
    <script src="{{asset('js/hotelktc.js')}}"></script>
  