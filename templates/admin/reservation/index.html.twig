			  <a id="traitees{{antenne.id}}-tab" data-toggle="tab" href="#traitees{{antenne.id}}" role="tab" aria-controls="traitees{{antenne.id}}" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0 border">Reservations traitées ({{reservationsTraitees | length}})</a>
			</li>
		  </ul>
		  <div id="myTab1Content{{antenne.id}}" class="tab-content">
