    <div class="br-pagetitle">
        <a href="{{path('index-tarif')}}" data-toggle="ajax" data-target="monContent" title="précédent">
            <i class="fa fa-arrow-left">Retour</i>
        </a>
        <i class="icon ionicons ion-edit"></i>
        <div>
          <h3>EDITION DES TARIFS</h3>           
          <p style="color:blue;" class="mg-b-0">----</p>
        </div>
    </div><!-- d-flex --> 

    <div class="br-section-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div x-data="{ ajouter : false }">
                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-7 col-xlg-8 col-md-12">
                                <div class="row mg-t-80">
                                    <div class="col">
                                        <form id="form-send" class="js-form-send {{app.user.hasAccess('tarif-Redit')}}" action="{{path('tarif-Redit')}}" method="POST" data-toggle="ajax" data-target="monContent">
                                            <div class="form-layout form-layout-4">
                                                <h6 class="br-section-label">Modifier un tarif</h6>
                                                <div class="row">
                                                    <label class="col-sm-4 form-control-label">Nom: <span class="tx-danger">*</span></label>
                                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">                                                                    
                                                        <input class="form-control" type="hidden" name="id" id="id" value="{{tarif.id}}" >
                                                        <input type="text" class="form-control" placeholder="Nom du module" name="nom" value="{{tarif.nom}}">
                                                    </div>
                                                </div><!-- row -->
                                                <br>
                                                <div class="row">
                                                    <label class="col-sm-4 form-control-label">durée (en Heure): <span class="tx-danger">*</span></label>
                                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                                        <input type="number" class="form-control" placeholder="la durée" name="dure" value="{{tarif.duree}}">
                                                    </div>
                                                </div><!-- row -->
                                                <br>
                                                <div class="row">
                                                    <label class="col-sm-4 form-control-label">Type de chambre: <span class="tx-danger">*</span></label>
                                                    <div class="wd-250 col-sm-8 mg-t-10 mg-sm-t-0">
                                                        <select name="type" class="form-control select2" data-placeholder="Choose one" style="width:100%">
                                                        <option label="--Choisit un type de chambre--"></option>                                                            
                                                        {% for type in tarif.antenne.typeDeChambres %}
                                                            <option value="{{type.id}}" {{type.id == tarif.typechambre.id ? "selected"}}>{{type.nom}}</option>
                                                        {% endfor %}
                                                        </select>
                                                    </div><!-- wd-250 -->
                                                </div><!-- col-->
                                                <br>
                                                <div class="row">
													<label class="col-sm-4 form-control-label">Type de tarif: <span class="tx-danger">*</span></label>
													<div class="wd-250 col-sm-8 mg-t-10 mg-sm-t-0">
														<select name="typetarif" class="form-control select2" required style="width:100%">
															<option value="NUITEE" {{tarif.type == "NUITEE" ? "selected"}}>NUITEE</option>
															<option value="SIESTE"{{tarif.type == "SIESTE" ? "selected"}}>SIESTE</option>
														</select>
													</div><!-- wd-250 -->
												</div><!-- col--><br>
                                                <div class="row">
                                                    <label class="col-sm-4 form-control-label">prix: <span class="tx-danger">*</span></label>
                                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                                        <input type="number" class="form-control" name="price" min="100" value="{{tarif.prix}}" step=".01">
                                                    </div>
                                                </div><!-- row -->
                                                <br>
                                                <div class="row">
                                                    <label class="col-sm-4 form-control-label">Description: <span class="tx-danger">*</span></label>
                                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                                    <textarea rows="3" class="form-control mg-t-20" name="description" placeholder="Description">{{tarif.description}}</textarea>
                                                    </div>
                                                </div><!-- row -->

                                                <div class="form-layout-footer mg-t-30">
                                                    <button type="submit" class="btn btn-primary">Modifier</button>	
                                                </div><!-- form-layout-footer -->
                                            </div><!-- form-layout -->
                                        </form>
                                    </div><!-- col-6 -->
                                </div><!-- row -->
                            </div>
                        </div>
                    </div>
                </div>	
            </div>
        </div>
    </div><!-- br-section-wrapper -->
       
<!-- br-mainpanel -->

