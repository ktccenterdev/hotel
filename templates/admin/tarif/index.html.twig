<div class="br-pagetitle">
	<i class="icon ionicons ion-social-usd"></i>
	<div>
		<h4>TARIFS</h4>
		<p style="color:blue;" class="mg-b-0">----</p>
	</div>
</div><!-- d-flex -->
<div class="br-section-wrapper">
	<div class="container">
		<h6 class="br-section-label">Liste des tarifs </h6>
		{% if "tarif-add" in app.session.get('userdroit') %}
			<div    x-data="{ ajouter : false }">
				<div class="d-flex justify-content-end" style="padding: 0px !important; color:white;">
					<button onclick="showNouveau()" class="btn btn-primary" id="btn-nouveau"><i class="fas fa-plus"></i> Ajouter</button>
					<button class="btn btn-secondary {{app.user.hasAccess('print-tarif')}}" style="margin-left:5px;"><a style="color:white;" href="{{path('print-tarif')}}" target="_blank"><i class="fa fa-print"></i> Imprimer</a></button>
				</div>
				<div class="formelement" id="nouveau" x-show="ajouter" style="padding:10px; display:none;">
					<div class="row d-flex justify-content-center">
						<div class="col-lg-12 col-md-12">
							<form id="form-send" class="js-form-send {{app.user.hasAccess('tarif-add')}}" action="{{path('tarif-add')}}" method="POST" data-toggle="ajax" data-target="monContent">
								<div class="form-layout form-layout-4">
									<h6 class="br-section-label">Ajouter un tarif</h6>
									<div class="row">
										<div class="col">
											<label class="col-sm-4 form-control-label">Type de chambre: <span class="tx-danger">*</span></label>
											<div class="col-sm-8 col-lg-12">
												<select name="type" class="form-control select2"  required style="width:100%">
												<option label="Sélectionner"></option>
												{% for type in app.user.antene.typeDeChambres %}
													<option value="{{type.id}}">{{type.nom}}</option>
												{% endfor %}
												</select>
											</div>
										</div>
										<div class="col">
											<label class="col-sm-4 form-control-label">Nom: <span class="tx-danger">*</span></label>
											<div class="col-sm-8 col-lg-12">
												<input type="hidden" name="id" id="id">
												<input type="text" class="form-control" placeholder="Nom" name="nom" required>
											</div>
										</div>	
									</div><!-- row --><br>

									<div class="row">										
										<div class="col-lg-6">
											<label class="col-sm-4 form-control-label">Type de tarif: <span class="tx-danger">*</span></label>
											<div class="col-lg-12 col-sm-8">
												<select name="typetarif" class="form-control select2" data-placeholder="Sélectionner" required style="width:100%">
													<option label="Sélectionner"></option>
													<option value="NUITEE">NUITEE</option>
													<option value="SIESTE">SIESTE</option>
												</select>
											</div>
											<div class="col-lg-6">
												<label class="col-sm-4 form-control-label">prix: <span class="tx-danger">*</span></label>
												<div class="col-sm-8 col-lg-12">
												<input type="number" class="form-control" name="price" min="100" value="" step=".01" required>
											</div>
										</div>
										</div>
									</div> <br>
									<div class="row">										
										<div class="col-lg-6">
											<label class="col-sm-4 form-control-label">Description: </label>
											<div class="col-sm-8 col-lg-12">
											<textarea name="description" id="description" cols="30" rows="3" placeholder="description"></textarea>
											</div>
										</div><!-- row -->
									</div>
								
									<div class="row row-xs mg-t-30">
										<div class="col-sm-7 mg-l-auto">
											<button type="button" class="btn btn-secondary" onclick="showNouveau()">Annuler</button>
											<button type="submit" id="btn-save-nouveau" class="btn btn-primary mg-r-5">Enrégistrer</button>																			
										</div>
									</div><!-- form-layout-footer -->
								</div><!-- form-layout -->
							</form>							
						</div>
					</div>
				</div>
			</div>
		{% endif %}		
	</div>
	<br>
		<div class="table-wrapper responsiveelement col-lg-12">
			<table class="datatable table display nowrap">
				<thead>
					<tr>
						<th class="wd-5p">#</th>
						<th class="wd-15p">Intitulé</th>
						<th class="wd-10p">Type de Chambre</th>
						<th class="wd-10p">Hébergement</th>
						<th class="wd-10p">Prix</th>
						<th class="wd-10p">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for tarif in antenne.tarifs %}
						<tr>
							<td>{{loop.index}}</td>
							<td>{{tarif.nom}}</td>
							<td>{{tarif.typechambre.nom}}</td>
							<td>{{tarif.type}}</td>
							<td>{{tarif.prix  |craue_currency('XAF', 'fr-FR')}}</td>
							<td>
								<!--button class="btn btn-teal active"><i class="fa fa-eye" aria-hidden="true"></i></button-->
								{% if "tarif-edit" in app.session.get('userdroit') %}
									<button class="btn btn-teal active" ><a href="{{ path('tarif-edit', {'id':tarif.id}) }}" style="padding: 0px !important; color:white;" class="nav-link ajax-link"  data-toggle="ajax" data-target="monContent" ><i class="fa fa-edit" aria-hidden="true"></i></a></button>
								{% endif %}
								{# {% if "tarif-delete" in app.session.get('userdroit') %}
									<form style="display: contents;" class="confirm-waiting js-form-send confirm-delete" data-message="Voulez-vous supprimer ce Tarif?" data-toggle="ajax" data-target="monContent" action="{{ path('tarif-delete') }}" method="DELETE">
										<input type="hidden" name="id" value="{{tarif.id}}">
										<button class="btn btn-danger" title="Supprimer"><i class="fa fa-trash" aria-hidden="true"></i></button>	
									</form>
								{% endif %} #}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div><!-- table-wrapper -->
</div><!-- br-section-wrapper -->
