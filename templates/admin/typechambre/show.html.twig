
<div class="br-pagetitle">
  <i class="fas fa-calulator"></i>
  <div>
    <h4><a href="{{path('index-type')}}" class="ajax-link {{app.user.hasAccess('index-type')}}"  data-toggle="ajax" data-target="monContent">TYPES DE CHAMBRES</a>/DETAILS</h4>
    <p style="color:blue;" class="mg-b-0">----</p>
  </div>
</div>
<div class="br-section-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <h6 class="br-section-label">
            <a href="{{path('index-type')}}" data-toggle="ajax" data-target="monContent" title="précédent">
              <i class="fa fa-arrow-left"></i>
            </a>
            Détails sur le type de chambre <u>{{chambre.nom}}</u>
          </h6>

          {# {% if "createtype" in app.session.get('userdroit') %} #}
            <button onclick="makeEditable()" id="btn-makeEditable" class="btn btn-success float-right mg-t--7"><i class="fa fa-edit"></i>  Modifier</button>
            <!--Formulaire d'edition-->
            <div class="formelement" id="nouveau" x-show="ajouter" style="padding:10px;">
              	<div class="row d-flex justify-content-center">
					<div class="col-lg-12 col-xlg-12 col-md-12">
						<div class="row mg-t-40">
							<div class="col">
								<form id="form-send"  action="{{ path('type-chambre-update') }}" method="POST" data-toggle="ajax" data-target="monContent" enctype = "multipart/form-data">
									<input type="hidden" name="id" id="id" value="{{chambre.id}}">
									<div class="form-layout form-layout-4">
										<h6 class="br-section-label" id="titre-nouveau" style="display: none;"> Modification du type de chambre</h6>
										<div class="row">
											<label class="col-sm-4 form-control-label">Nom: <span class="tx-danger">*</span></label>
											<div class="col-sm-8 mg-t-10 mg-sm-t-0">
												<input type="text" class="form-control" id="nom" name="nom" value="{{chambre.nom}}" required disabled>
											</div>
										</div><!-- row --><br>
										<div class="row">
											<label class="col-sm-4 form-control-label">Description: </label>
											<div class="col-sm-8 mg-t-10 mg-sm-t-0">
											<textarea rows="3" class="form-control mg-t-20" name="description"  disabled>{{chambre.description}}</textarea>
											</div>
										</div><!-- row --><br>
										<div class="row">
											<label class="col-sm-4 form-control-label">Photo:</label>
											<div class="col-sm-8 mg-t-10 mg-sm-t-0">
											{% if chambre.photo %}
												<img src="{{'photo/typechambre/'~chambre.photo}}" alt="" width="100" height="100"><br>                           
											{% endif %}
												<input type="file" name="photo" id="file-2" value="{{chambre.photo}}"
													class="inputfile" data-caption="files selected" accept=".png, .jpg, .jpeg"  disabled>
												<label for="file-2" class="if-outline if-outline-info">
													<i class="icon ion-ios-upload-outline tx-24"></i>
													<span>Choisir une autre photo</span>
												</label>
											</div>
										</div><!-- row --><br>                            
										<div class="row row-xs mg-t-30" id="btn-footer" style="display: none;">
											<div class="col-sm-8 mg-l-auto">
												<div class="form-layout-footer">
													<button type="button" class="btn btn-default" onclick="makeEditable()">Annuler</button>
													<button type="submit" id="btn-save-nouveau" class="btn btn-primary mg-r-5">Enrégistrer</button>
												</div>
											</div>
										</div>
									</div>
								</form>
							</div><!-- col-6 -->
						</div><!-- row -->
					</div>
              	</div>
            </div>

          <h6>Chambres associées</h6>
            <div class="row table-wrapper">
		<div class="col-lg-12 col-md-12">
    <table class="datatable table display responsive nowrap">
    <thead>
      <tr>
        <th class="wd-15p">#</th>
        <th class="wd-15p">Numéro de chambre</th>
        <th class="wd-25p">Nombre de Lits</th>
        <th class="wd-25p">ACTION</th>
      </tr>
    </thead>
    <tbody>
        {% for item in chambre.chambres  %}
              <tr>
                <td>{{loop.index}}</td>
                <td>{{item.numero}}</td>
                <td>{{item.nblit}}</td>
                <td>
                  <button class="btn btn-info active" {{app.user.hasAccess('showchambre')}}><a href="{{ path('showchambre',{id: item.id}) }}" style="padding: 0px !important; color:white;" class="nav-link ajax-link"  data-toggle="ajax" data-target="monContent" ><i class="fa fa-eye" aria-hidden="true"></i> Visualiser</a></button>
                </td>
              </tr>
        {% endfor %}
    </tbody>
  </table>
		</div>
	</div><!-- table-wrapper -->


         {#  {% endif %} #}
          
        </div>
      </div>
    </div>
</div><!-- br-section-wrapper -->
	