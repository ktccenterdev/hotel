
<div class="br-pagetitle">
  <i class="icon ionicons ion-android-contact"></i>
  <div>
    <h4>Utilisateurs</h4>
    <p style="color:blue;" class="mg-b-0">----</p>
  </div>
</div><!-- d-flex -->

<div class="br-section-wrapper">
    <div class="container">
        <div class="row">
        <div class="col-sm">
            <h6 class="br-section-label">Liste des utilisateurs</h6>
            <div x-data="{ ajouter : false }">
            {# <div class="d-flex justify-content-end" style="padding-right:10px; display: none;" >
                <button class="btn btn-secondary" style="margin-left:5px;"><a style="color:white;" href="{{path('print-user')}}" target="_blank"><i class="fa fa-print"></i> Imprimer</a></button>
            </div><br> #}
            <div class="formelement" id="nouveau" x-show="ajouter" style="padding:10px; display:none;">
                <div class="row d-flex justify-content-center">
                <div class="col-lg-12 col-xlg-12 col-md-12">
                    <div class="row mg-t-20">
                    <div class="col">
                        <form id="form-send" class="js-form-send" action="{{path('updateroleuser')}}" method="POST"
                        data-toggle="ajax" data-target="monContent">
                        <div class="form-layout form-layout-4">
                            <h6 class="br-section-label titre-nouveau"> Editer un utilisateur</h6>
                            <input type="hidden" name="user" id="user">
                            <div class="row">
                            <label class="col-sm-4 form-control-label">Username: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <input type="text" class="form-control" name="username" id="username"  required>
                            </div>
                            </div><br>
                            <div class="row">
                            <label class="col-sm-4 form-control-label">Rôle: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <select name="role" class="form-control select2" data-placeholder="Choose one" id="role" style="width: 100%">
                                <option label="Sélectionner"></option>
                                {% for role in roles %}
                                    {% if role.nom != 'Super' %}
                                        <option value="{{role.id}}">{{role.nom}}</option>
                                    {% endif %}
                                    
                                {% endfor %}
                                </select>
                            </div>
                            </div><br>
                            {% if app.user.isadmin %}
                            <div class="row">
                            <label class="col-sm-4 form-control-label">Est super admin?: </label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <select name="superadmin" class="form-control" data-placeholder="Choose one" id="superadmin" style="width: 100%">
                                    <option value="1">Oui</option>
                                    <option value="0">Non</option>
                                </select>
                            </div>
                            </div><br>
                            {% endif %}
                            <br>
                            <div class="row row-xs mg-t-30">
                            <div class="col-sm-8 mg-l-auto">
                                <div class="form-layout-footer">
                                <button type="button" class="btn btn-default" onclick="showNouveau()">Annuler</button>
                                <button type="submit" id="btn-save-nouveau" class="btn btn-primary mg-r-5">Enrégistrer</button>
                                </div>
                            </div>
                            </div>                      
                        </form>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
     <div class="card-body form-layout form-layout-5">
        <!-- Accordion-->
        <div id="accordion2" class="accordion accordion-head-colored accordion-primary" role="tablist" aria-multiselectable="true">
            <div class="card">            
                {% for antenne in antennes %}
                    <div class="card-header" role="tab" id="headingThree2{{loop.index}}">
                        <h4 class="mg-b-0">
                        <a class="collapsed transition" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree2{{loop.index}}" aria-expanded="false" aria-controls="collapseThree2">
                            {{antenne.nom}}    
                            <i class="fa fa-chevron-down"></i>               
                            <i class="tx-16 text-secondary stats">( {{utilisateurs[antenne.id] | length}}) </i> 
                        </a>
                        </h4>
                    </div>
                    <div id="collapseThree2{{antenne.id}}" class="collapse" role="tabpanel" aria-labelledby="headingThree2">
                        <div class="card-block pd-20">
                            <div class="container py-1">              
                                <div class="p-2 bg-white rounded shadow mb-5">
                                    <div class="table-wrapper">
                                        <table class="datatable table display responsive nowrap">
                                            <thead>
                                                <tr>
                                                    <th class="wd-5p">#</th>
                                                    <th class="wd-15p">Noms</th>
                                                    <th class="wd-15p">Utilisateur</th>
                                                    <th class="wd-15p">Rôle</th>
                                                    <th class="wd-15p">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for user in utilisateurs[antenne.id] %}
                                                    <tr>
                                                        <td class="text-centers">{{loop.index}}</td>
                                                        <td>{{user.nom}} {{user.prenom}}</td>
                                                        <td>{{user.username}}</td>
                                                        <td> {{user.role.nom is defined ? user.role.nom : ''}}</td>
                                                        <td class="dropdown text-center">
                                                            {% if user.role.nom != "Super" %}
                                                                <a href="#" data-toggle="dropdown" class="btn pd-y-3 tx-gray-500 hover-info"><i class="icon ion-more"></i></a>
                                                                <div class="dropdown-menu dropdown-menu-right pd-10">
                                                                    <nav class="nav nav-style-1 flex-column text-center">	
                                                                        <button class="btn btn-link" id="editer{{user.id}}" onclick="chargerFormNouveau({{user.id}}, '{{path('updateroleuser')}}', ['user', 'username', 'role', 'superadmin'])" 
                                                                            class="btn btn-link" data-user="{{user.id}}" data-username="{{user.username}}" data-role="{{user.role.id}}" data-superadmin="{{user.isadmin ? 1 : 0}}">Editer
                                                                        </button>
                                                                        {% if not user.isadmin %}
                                                                            <form class="confirm-delete {{app.user.hasAccess('utilisateur-delete')}}" method="DELETE"
                                                                                action="{{path('utilisateur-delete')}}"  
                                                                                data-message="Voulez-vous supprimer cet utilisateur?"
                                                                                data-toggle="ajax" data-target="monContent">
                                                                                <input type="hidden" name="id" value="{{user.id}}">												
                                                                                <button type="submit"  class=" ajax-link btn btn-link" >Supprimer</button>
                                                                            </form>		
                                                                        {% endif %}
                                                                    </nav>
                                                                </div><!-- dropdown-menu -->
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div><!-- table-wrapper -->
                    </div>            
                {% endfor %}
            </div>
        </div>
    </div>
</div><!-- br-section-wrapper -->



