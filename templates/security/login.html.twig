<!doctype html>
<html lang="en">
  <head>
  	<title>{{ parametre.nom }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="form/css/style.css">
	<link rel="icon" href="{{asset('photo/Logo/'~ parametre.logo)}}" type="image/icon type">

	</head>
	<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
		      	<div class="icon d-flex align-items-center justify-content-center">
		      		{#<span class="fa fa-user-o"></span>#}
					<span ><img  src="{{asset('photo/Logo/'~ parametre.logo)}}" height="150px" width="300px" alt="dropdown image" 
						class="img-responsive"></span>
		      	</div>
		      	<h3 style="margin-top: 27px;" class="text-center mb-4">{{ parametre.nom }}</h3>
             <form method="post" class="login-form">

                <p>
                    {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                </p>

		      		<div class="form-group">
		      			<input  type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control rounded-left" autocomplete="username" required autofocus>
		      		</div>
	            <div class="form-group d-flex">
	              <input type="password" name="password" id="inputPassword" class="form-control rounded-left" autocomplete="current-password" required>
	            </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
	            <div class="form-group d-md-flex">
	            	<div class="w-50">
	            		<label class="checkbox-wrap checkbox-primary">Se souvenir de moi
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#">Mot de passe oubli√©</a>
								</div>
	            </div>
				<div class="w-50">
					<span style="position: absolute; right: 6px; bottom: 0px;">by <a href="https://kamer-center.net/" target="_blank">KTC CENTER</a></span>
				</div>
	            <div class="form-group">
				
	            	<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Se connecter</button>
					
	            </div>
	          </form>
	        </div>
				</div>
			</div>
		</div>
	</section>

	<script src="form/js/jquery.min.js"></script>
  <script src="form/js/popper.js"></script>
  <script src="form/js/bootstrap.min.js"></script>
  <script src="form/js/main.js"></script>

	</body>
</html>

